   <y>115</y>
   <w>32</w>
   <h>14</h>
  </instrument>

  <instrument include="Aircraft/Instruments/controls.xml">
   <name>Control Position Indicators</name>
   <x>410</x>
   <y>60</y>
   <w>90</w>
   <h>90</h>
  </instrument>

<!-- end controls visual feedback cluster -->

<!-- sacred six -->

  <instrument include="Aircraft/Instruments/asi-c172s.xml">
